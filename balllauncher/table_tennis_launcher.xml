<mujoco model="ball_launch">
    <compiler angle="degree" coordinate="local"/>
    <option timestep="0.001" gravity="0 0 -9.81" viscosity="0"/>
    
    <asset>
        <material name="table_mat" rgba="0.0 0.3 0.8 1"/>
        <material name="net_mat" rgba="0.2 0.2 0.2 1"/>
        <material name="ball_mat" rgba="1 1 1 1"/>
    </asset>

    <worldbody>
        <light diffuse=".8 .8 .8" pos="0 0 2" dir="0 0 -1"/>
        <geom name="ground" type="plane" size="3 3 0.1" rgba=".7 .7 .7 1"/>
        
        <!-- Centered table -->
        <body name="table" pos="0 0 0.76">
            <geom name="table_geom" type="box" size="1.37 0.7625 0.025" material="table_mat"/>
        </body>
        <body name="net" pos="0 0 0.9125"> 
            <geom name="net_geom" type="box" size="0.01 0.76 0.0762" material="net_mat"/>
        </body>
        
        <!-- Ball with starting position matching the Python script -->
        <!-- The pos coordinates are (x, y, z) -->
        <body name="ball_body" pos="-2.5 0 1.25">
            <freejoint name="ball_free"/>
            <geom name="ball" type="sphere" size="0.02" density="0.27" material="ball_mat"/>
        </body>
    </worldbody>

    <contact>
        <pair geom1="ball" geom2="table_geom" 
              solref="0.0003 1" solimp="0.98 0.99 0.001" friction="0.15 0.01 0.001"/>
        <pair geom1="ball" geom2="net_geom" 
              solref="0.005 1" solimp="0.3 0.5 0.01" friction="0.8 0.05 0.001"/>
        <pair geom1="ball" geom2="ground" 
              solref="0.0003 1" solimp="0.98 0.99 0.001" friction="0.2 0.01 0.001"/>
    </contact>
</mujoco>